<h2><%= @course.name %></h2>
<p>Description: <%= @course.description %></p>
<div class="box">
  <div class="box-left">
    <ul>
      <% if @course.booking %>
        <%= render 'booking' %>
      <% end %>
      <li>
        Start Time: <%= @course.start_time %>
      </li>
      <li>
        End Time: <%= @course.end_time %>
      </li>
    </ul>
    <% if can? :manage, Course %>
      <div class="box-bottom" >
        <%= button_to "Edit", edit_course_path(@course), method: :get %>
        <%= button_to "Delete", delete_course_path(@course) %>
      </div>
    <% end %>
  </div>
  <div class="box-right">
    <div class="instructors">
      <p>Instructors | <%= @course.instructors.count %></p>
      <% if @course.instructors.any? %>
        <%= render 'assignments' %>
      <% end %>
      <div class="box-bottom" >
        <%= button_to "Add Instructor", new_course_assignment_path(@course), method: :get %>
      </div>
    </div>
    <% if current_user %>
      <div class="students">
        <p>Students | <%= @course.students.count %></p>
        <% if @course.students.any? %>
          <%= render 'enrollments' %>
        <% end %>
        <div class="box-bottom" >
          <%= button_to "Add Student", new_course_enrollment_path(@course), method: :get %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= button_to "Courses", courses_path, method: :get %>
