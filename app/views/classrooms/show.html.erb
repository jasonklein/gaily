<div class="frame medium">
  <h2>
    <%= @classroom.name %>
  </h2>
  <ul>
    <li>
      Equipment: <%= @classroom.equipment %>
    </li>
    <li>
      Other aspects: <%= @classroom.other_aspects %>
    </li>
    <li>
      <br />
      <%= button_to "Edit", edit_classroom_path(@classroom), method: :get %>
      <%= button_to "Delete", delete_classroom_path(@classroom) %>
    </li>
  </ul>
</div>
<div class="frame medium">
  <h3>Bookings</h3>
  <% if @bookings.empty? %>
    <p>There are no bookings for this classroom.</p>
  <% else %>
    <% @bookings.each do |booking| %>
      <ul>
        <li> Course: <%= link_to booking.course.name, course_path(booking.course) %>
        </li>
        <li>
          Start Date: <%= booking.start_date %>
        </li>
        <li>
          End Date: <%= booking.end_date %>
        </li>
      </ul>
    <% end %>
  <% end %>
  <ul>
    <li>
      <%= button_to "Add a Course", new_course_path, method: :get %>
    </li>
  </ul>
</div>
<div class="frame list-button">
  <%= button_to "Classrooms", classrooms_path, method: :get %>
</div>