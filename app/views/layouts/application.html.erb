<!DOCTYPE html>
<html>
<head>
  <title>GAilyApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="flash">
    <h2>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </h2>
  </div>

  <%= yield %>

</body>
</html>
